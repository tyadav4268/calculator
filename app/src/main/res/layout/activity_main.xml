<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/textBackground"
        android:gravity="bottom|right"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text="0"
        android:textSize="48sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/rowButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="AC"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/rowButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="log2"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/rowButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="%"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/endButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="B"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/rowButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="1/x"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/rowButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="x^2"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/rowButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="rtx"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/rowButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="/"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numbersBackground"
                android:fontFamily="sans-serif-medium"
                android:text="7"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numbersBackground"
                android:fontFamily="sans-serif-medium"
                android:text="8"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numbersBackground"
                android:fontFamily="sans-serif-medium"
                android:text="9"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="X"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numbersBackground"
                android:fontFamily="sans-serif-medium"
                android:text="4"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numbersBackground"
                android:fontFamily="sans-serif-medium"
                android:text="5"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numbersBackground"
                android:fontFamily="sans-serif-medium"
                android:text="6"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="-"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numbersBackground"
                android:fontFamily="sans-serif-medium"
                android:text="1"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numbersBackground"
                android:fontFamily="sans-serif-medium"
                android:text="2"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/numbersBackground"
                android:fontFamily="sans-serif-medium"
                android:text="3"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colButtonBackground"
                android:fontFamily="sans-serif-light"
                android:text="+"
                android:textSize="24dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/numbersBackground"
            android:fontFamily="sans-serif-light"
            android:text="+/-"
            android:textSize="24dp" />

        <Button
            android:id="@+id/button19"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/numbersBackground"
            android:fontFamily="sans-serif-medium"
            android:text="0"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/numbersBackground"
            android:fontFamily="sans-serif-medium"
            android:text="."
            android:textSize="32dp" />

        <Button
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/equalsBackground"
            android:fontFamily="sans-serif-light"
            android:text="="
            android:textSize="24dp" />
    </LinearLayout>

</LinearLayout>